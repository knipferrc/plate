{
  "name": "plate",
  "version": "0.0.1",
  "description": "Whats on your plate?",
  "author": "Tyler Knipfer <knipferrc@gmail.com>",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/knipferrc/plate-app.git"
  },
  "bugs": {
    "url": "https://github.com/knipferrc/plate-app/issues"
  },
  "keywords": [
    "svelte",
    "plate",
    "social"
  ],
  "scripts": {
    "dev": "svelvet",
    "build": "cross-env NODE_ENV=production svelvet",
    "deploy": "npm run build && firebase deploy",
    "prettier": "prettier --write \"**/*.{tsx,ts,css,md,svelte,js,vue,html}\"",
    "eslint": "eslint --ext js,svelte .",
    "tailwind": "npx tailwind build src/assets/styles/tailwind.css -o src/assets/styles/tailwind.css"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run build"
    }
  },
  "lint-staged": {
    "*.{svelte,md,js,css,html}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "cross-env": "^7.0.0",
    "eslint": "^6.8.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "prettier-plugin-svelte": "^0.7.0",
    "svelte": "^3.19.1",
    "svelvet": "^0.3.4",
    "tailwindcss": "^1.2.0"
  },
  "dependencies": {
    "dayjs": "^1.8.21",
    "firebase": "^7.9.3",
    "page": "^1.11.5"
  }
}
