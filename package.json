{
  "name": "plate",
  "version": "0.0.1",
  "description": "Whats on your plate?",
  "author": "Tyler Knipfer <knipferrc@gmail.com>",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/knipferrc/plate-app.git"
  },
  "bugs": {
    "url": "https://github.com/knipferrc/plate-app/issues"
  },
  "keywords": [
    "svelte",
    "plate",
    "social"
  ],
  "scripts": {
    "build": "parcel build src/index.html --out-dir public",
    "dev": "parcel src/index.html",
    "prettier": "prettier --write \"**/*.{tsx,ts,css,md,svelte,js,vue,html}\"",
    "eslint": "eslint --ext js,svelte ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run build"
    }
  },
  "lint-staged": {
    "*.{svelte,md,js,css,html}": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  },
  "browserslist": [
    "last 1 Chrome versions"
  ],
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "autoprefixer": "^9.7.3",
    "cross-env": "^6.0.3",
    "eslint": "^6.8.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^4.0.7",
    "lint-staged": "^9.5.0",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-compress": "^1.1.0",
    "parcel-plugin-svelte": "^4.0.5",
    "postcss": "^7.0.26",
    "prettier": "^1.19.1",
    "prettier-plugin-svelte": "^0.7.0",
    "svelte": "^3.16.7",
    "tailwindcss": "^1.1.4"
  },
  "dependencies": {
    "@fortawesome/free-brands-svg-icons": "^5.12.0",
    "@fortawesome/free-solid-svg-icons": "^5.12.0",
    "bcrypt": "^3.0.7",
    "faunadb": "^2.10.2",
    "filepond": "^4.9.3",
    "jsonwebtoken": "^8.5.1",
    "page": "^1.11.5",
    "sirv-cli": "^0.4.5"
  }
}
